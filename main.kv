WindowManager:
    StartPage:
        name: "start"
    MainPage:
        name: "main"
    SettingPage:
        name: "setting"

<StartPage>:
    name: "start"
    on_enter: root.reset_data()
    AnchorLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'images/tlo.jpg'
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: "320dp", "130dp"
            pos_hint: {'center_x':.5, 'center_y': .5}
            spacing: "50dp"
            AnchorLayout:
                anchor_y: 'top'
                size_hint_y: 1
                Label:
                    text: "Wprowadź IP:"
                    font_name: "Spartan_bold"
                    font_size: "35dp"
                    size: "150dp", "30dp"
                    size_hint: None, None
                    pos: self.pos
            AnchorLayout:
                anchor_y: 'center'
                BoxLayout:
                    size_hint: .65, .2
                    pos_hint: {'center_x':.5, 'center_y': .5}
                    spacing: "20dp"
                    AnchorLayout:
                        anchor_x: 'left'
                        size_hint_y: 1
                        TextInput:
                            id: IP
                            multiline: False
                            halign: 'center'
                            valign: 'center'
                            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                            size: "150dp", "35dp"
                            pos: self.pos
                            size_hint: None, None
                            font_name: "Spartan_light"
                            font_size: "25dp"
                            on_double_tap: IP.text = ''
                    AnchorLayout:
                        anchor_x: 'right'
                        size_hint_x: None
                        Button:
                            pos: self.pos
                            size: "40dp", "40dp"
                            size_hint: None, None
                            background_normal: 'images/connect_normal.png'
                            background_down: 'images/connect_down.png'
                            border: (1, 1, 1, 1)
                            on_press:
                                root.connect_button(is_connect)
                                root.manager.get_screen("main").thread_send()
                                root.manager.transition.direction = 'left'
            AnchorLayout:
                anchor_y: 'bottom'
                size_hint_y: 1
                Label:
                    id: is_connect
                    size: "150dp", "30dp"
                    size_hint: None, None
                    font_name: "Spartan_bold"
                    font_size: "25dp"

<MainPage>:
    name: "main"
    BoxLayout:
        orientation: 'vertical'
        spacing: "20dp"
        padding: ("20dp", "20dp", "20dp", "20dp")
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'images/tlo.jpg'
        AnchorLayout:
            anchor_y: 'top'
            size: 100, "50dp"
            size_hint_y: None
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'top'
                size_hint_x: 1
                Button:
                    size: "50dp", "50dp"
                    size_hint: None, None
                    background_normal: 'images/disconnect_normal.png'
                    background_down: 'images/disconnect_down.png'
                    border: (1, 1, 1, 1)
                    on_press:
                        root.disconnect_button()
                        root.manager.transition.direction = 'right'
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'top'
                size_hint_x: 1
                Button:
                    size: "50dp", "50dp"
                    size_hint: None, None
                    background_normal: 'images/settings_normal.png'
                    background_down: 'images/settings_down.png'
                    border: (1, 1, 1, 1)
                    on_press:
                        app.root.current = 'setting'
                        root.manager.transition.direction = 'left'
        BoxLayout:
            spacing: "30dp"
            orientation: "vertical"
            BoxLayout:
                spacing: "5dp"
                size: 100, "60dp"
                size_hint: 1, None
                orientation: "vertical"
                Label:
                    id: recv_info
                    halign: 'center'
                    valign: 'middle'
                    size: "150dp", "30dp"
                    size_hint: None, None
                    pos_hint: {"center_x": .5}
                    font_name: "Spartan_light"
                    font_size: "25dp"
                    text: 'Otrzymywana ramka danych:'
                Label:
                    id: recv
                    halign: 'center'
                    valign: 'middle'
                    size: "150dp", "30dp"
                    size_hint: None, None
                    pos_hint: {"center_x": .5}
                    font_name: "Spartan_light"
                    font_size: "20dp"
                    text: ''

            BoxLayout:
                spacing: "5dp"
                size: 100, "60dp"
                size_hint: 1, None
                orientation: "vertical"
                Label:
                    id: send_info
                    halign: 'center'
                    valign: 'middle'
                    size: "150dp", "30dp"
                    size_hint: None, None
                    pos_hint: {"center_x": .5}
                    font_name: "Spartan_light"
                    font_size: "25dp"
                    text: 'Przesyłana ramka danych:'
                TextInput:
                    id: send
                    multiline: False
                    halign: 'center'
                    valign: 'middle'
                    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                    size: "150dp", "33dp"
                    size_hint: None, None
                    pos_hint: {"center_x": .5}
                    font_name: "Spartan_light"
                    font_size: "20dp"
                    text: '[000000]'

            BoxLayout:
                spacing: "30dp"
                size: "200dp", "50dp"
                size_hint: None, None
                pos_hint: {"center_x": .5, "center_y": .2}
                ToggleButton:
                    id: LED1
                    group: 'LEDs'
                    font_name: "Spartan_Bold"
                    font_size: "25dp"
                    text: "LED1"
                    size: "50dp", "50dp"
                    on_state:
                        root.update_led1_value(self.state, send)

                ToggleButton:
                    id: LED2
                    group: 'LEDs'
                    font_name: "Spartan_Bold"
                    font_size: "25dp"
                    text: "LED2"
                    size: "50dp", "50dp"
                    on_state:
                        root.update_led2_value(self.state, send)

            AnchorLayout:
                anchor_y: 'top'
                TabbedPanel:
                    id: tabs
                    size: "50dp","300dp"
                    size_hint: 1, 1
                    tab_pos: "bottom_mid"
                    do_default_tab: False
                    background_color: 1, 1, 1, 0.6
                    TabbedPanelItem:
                        id: sliders
                        font_name: "Spartan_Bold"
                        font_size: "20dp"
                        text: "Suwaki"
                        on_press: root.reset_tabs()
                        BoxLayout:
                            padding: ("20dp", "10dp", "20dp", "10dp")
                            spacing: "10dp"
                            size: 100, "150dp"
                            size_hint: 1 , 1
                            pos_hint: {"center_x": .5, "center_y": .5}
                            Slider:
                                id: left_slider
                                min: -128
                                max: 127
                                step: 1
                                size: self.size
                                on_value: root.update_left_slider_values(left_slider, send)
                                orientation: "vertical"
                            Image:
                                source: "images/wheel.png"
                                size: "200dp","200dp"
                                size_hint: None, None
                                border: 1, 1, 1, 1
                                pos_hint: {"center_x": .5, "center_y": .5}
                            Slider:
                                id: right_slider
                                min: -128
                                max: 127
                                step: 1
                                on_value: root.update_right_slider_values(right_slider, send)
                                orientation: "vertical"
                    TabbedPanelItem:
                        id: arrows
                        text: "Strzałki"
                        font_name: "Spartan_Bold"
                        font_size: "20dp"
                        on_press: root.reset_tabs()
                        AnchorLayout:
                            anchor_y: "top"
                            BoxLayout:
                                size_hint: 1 , 1
                                size: 100, "150dp"
                                orientation: "vertical"
                                spacing: "15dp"
                                BoxLayout:
                                    spacing: "10dp"
                                    BoxLayout:
                                        size: "300dp", "110dp"
                                        size_hint: 1, 1
                                        orientation: "vertical"
                                        spacing: "10dp"
                                        ToggleButton:
                                            id: up
                                            size_hint_x: None
                                            width: self.height
                                            background_normal: 'images/up_normal.png'
                                            background_down: 'images/up_down.png'
                                            border: (1, 1, 1, 1)
                                            pos_hint: {"center_x": .5}
                                            on_press:
                                                root.update_arrows("up", "press", speed, angle, send)
                                            on_release:
                                                root.update_arrows("up", "release", speed, angle, send)
                                        BoxLayout:
                                            size_hint: 1, 1
                                            spacing: "10dp"
                                            size_hint_x: None
                                            width: 3*self.height+20
                                            pos_hint: {"center_x": .5}
                                            Button:
                                                id: left
                                                size_hint_x: None
                                                width: self.height
                                                background_normal: 'images/left_normal.png'
                                                background_down: 'images/left_down.png'
                                                border: (1, 1, 1, 1)
                                                on_press:
                                                    root.update_arrows("left", "press", speed, angle, send)
                                                on_release:
                                                    root.update_arrows("left", "release", speed, angle, send)
                                            ToggleButton:
                                                id: down
                                                size_hint_x: None
                                                width: self.height
                                                background_normal: 'images/down_normal.png'
                                                background_down: 'images/down_down.png'
                                                border: (1, 1, 1, 1)
                                                on_press:
                                                    root.update_arrows("down", "press", speed, angle, send)
                                                on_release:
                                                    root.update_arrows("down", "release", speed, angle, send)
                                            Button:
                                                id: right
                                                size_hint_x: None
                                                width: self.height
                                                background_normal: 'images/right_normal.png'
                                                background_down: 'images/right_down.png'
                                                border: (0.5, 0.5, 0.5, 0.5)
                                                on_press:
                                                    root.update_arrows("right", "press", speed, angle, send)
                                                on_release:
                                                    root.update_arrows("right", "release", speed, angle, send)
                                BoxLayout:
                                    spacing: "5dp"
                                    orientation: "vertical"
                                    BoxLayout:
                                        size: "100dp", "130dp"
                                        size_hint: 0.8, 1
                                        orientation: "horizontal"
                                        pos_hint: {"center_x": 0.5}
                                        spacing: "15dp"
                                        Image:
                                            source: "images/speed.png"
                                            size: "30dp", "30dp"
                                            size_hint: None, None
                                            pos_hint: {"center_y": 0.5}
                                        Slider:
                                            id: speed
                                            min: 0
                                            max: 127
                                            step: 1
                                            orientation: "horizontal"
                                    BoxLayout:
                                        size: "100dp", "130dp"
                                        size_hint: 0.8, 1
                                        orientation: "horizontal"
                                        pos_hint: {"center_x": 0.5}
                                        spacing: "15dp"
                                        Image:
                                            source: "images/rotate.png"
                                            size: "30dp", "30dp"
                                            size_hint: None, None
                                            pos_hint: {"center_y": 0.5}
                                        Slider:
                                            id: angle
                                            min: 0
                                            max: 0.9
                                            step: 0.1
                                            orientation: "horizontal"

<SettingPage>:
    name: "setting"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/tlo.jpg'
    BoxLayout:
        orientation: "vertical"
        spacing: "30dp"
        padding: ("20dp", "20dp", "20dp", "20dp")
        AnchorLayout:
            anchor_y: "top"
            anchor_x: "left"
            size: 100, "50dp"
            size_hint_y: None
            Button:
                size: "50dp", "50dp"
                size_hint: None, None
                background_normal: 'images/return_normal.png'
                background_down: 'images/return_down.png'
                border: 1, 1, 1, 1
                pos_hint: {'left': 1, 'top': 1}
                on_press:
                    app.root.current = 'main'
                    root.manager.transition.direction = 'right'
        BoxLayout:
        # d007 - max; 2000 - min
            spacing: "25dp"
            orientation: "vertical"
            BoxLayout:
                orientation: "vertical"
                size: "80dp", "50dp"
                size_hint: 1, None
                pos_hint: {"center_x": 0.5}
                spacing: "7dp"
                BoxLayout:
                    size: "20dp", "10dp"
                    size_hint: 1, None
                    Label:
                        id: state_info
                        text: "Stan robota:"
                        font_name: "Spartan_light"
                        font_size: "25dp"
                        size: "20dp", "10dp"
                BoxLayout:
                    size: "20dp", "40dp"
                    size_hint: 1, None
                    pos_hint: {"top": 1}
                    cols: 1
                    Label:
                        id: state_label
                        text: ''
                        size_hint: 0.5, 1
                        text_size: self.size
                        font_name: "Spartan_light"
                        font_size: "20dp"
                        halign: 'center'

            BoxLayout:
                orientation: "vertical"
                size: "300dp", "40dp"
                size_hint: 1, None
                spacing: "20dp"
                Label:
                    id: battery_info
                    text: "Poziom nałdowania robota:"
                    font_name: "Spartan_light"
                    font_size: "25dp"
                Label:
                    id: battery_widget
                    text: ''
                    font_name: "Spartan_light"
                    font_size: "20dp"
            AnchorLayout:
                anchor_y: "top"
                BoxLayout:
                    orientation: "vertical"
                    spacing: "15dp"
                    size_hint: 1 , None
                    size: 100, "210dp"
                    padding: ["25dp", "0dp", "25dp", "0dp"]
                    Label:
                        id: sensors_info
                        size: "150dp", "30dp"
                        text: "Odczyt z sensorów światła:"
                        font_name: "Spartan_light"
                        font_size: "25dp"
                    WaterFill:
                        id: sensor1_widget
                        level: 0
                        size: 100, "25dp"
                        size_hint: 1, None
                    WaterFill:
                        id: sensor2_widget
                        level: 0
                        size: 100, "25dp"
                        size_hint: 1, None
                    WaterFill:
                        id: sensor3_widget
                        level: 0
                        size: 100, "25dp"
                        size_hint: 1, None
                    WaterFill:
                        id: sensor4_widget
                        level: 0
                        size: 100, "25dp"
                        size_hint: 1, None
                    WaterFill:
                        id: sensor5_widget
                        level: 0
                        size: 100, "25dp"
                        size_hint: 1, None

<WaterFill@Widget>:
    level: 0
    width: root.width
    size_hint: 1, 1
    canvas:
        StencilPush
        Rectangle:
            pos: root.pos
            size: root.size

        StencilUse

        Color:
            rgb: self.level, 1-self.level , 0
        Rectangle:
            pos: root.pos
            size: (root.level*root.width, root.height)

        StencilUnUse

        StencilPop
